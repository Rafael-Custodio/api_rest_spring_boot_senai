import java.util.Scanner;

public class Exercicio_11 {

	public static void main(String[] args) {


		
	    /*
		11 - Calcular o desconto de uma compra com base no valor total (exemplo: desconto de 10% se passar de R$100).Caso contrario 5%;
	    */
		
	    System.out.println("====================");
	    System.out.println("====================");
	    System.out.println("Calcular o desconto de uma compra com base no valor total (exemplo: desconto de 10% se passar de R$100).Caso contrario 5%.");
	    System.out.println("====================");
	    System.out.println("====================");
	    System.out.println(" ");
	    
	    Scanner teclado = new Scanner(System.in);

	    System.out.println("Digite o valor da compra: ");
	    Double compra = teclado.nextDouble();
	    Double valor_final;

	   
	    if (compra > 100) {
	    	valor_final = ((compra - 5) / 100) * 100;
		    System.out.println(" ");
	    	System.out.println("O valor da compra, de R$ " + compra + " com desconto de 5%, tem o valor final de R$ " + valor_final);			
		} else {
		    System.out.println(" ");
	    	System.out.println("O número NÃO está contido entre 10 e 20!");			
		}
	
	}

}
